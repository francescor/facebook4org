<h1>Listing accommodations</h1>

<table>
  <tr>
    <th>User</th>
    <th>Organisation</th>
    <th>Type</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Post Code</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Status</th>
    <th>Description</th>
  </tr>

<% @accommodations.each do |accommodation| %>
  <tr>
    <td><%=h accommodation.user_id %></td>
    <td><%=h accommodation.organisation_id %></td>
    <td><%=h accommodation.type %></td>
    <td><%=h accommodation.address %></td>
    <td><%=h accommodation.city %></td>
    <td><%=h accommodation.state %></td>
    <td><%=h accommodation.country %></td>
    <td><%=h accommodation.post_code %></td>
    <td><%=h accommodation.latitude %></td>
    <td><%=h accommodation.longitude %></td>
    <td><%=h accommodation.status %></td>
    <td><%=h accommodation.description %></td>
    <td><%= link_to 'Show', accommodation %></td>
    <td><%= link_to 'Edit', edit_accommodation_path(accommodation) %></td>
    <td><%= link_to 'Remove', accommodation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New accommodation', new_accommodation_path %>