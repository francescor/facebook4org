<h1>Listing organisations</h1>

<%= link_to 'New organisation', new_organisation_path %>
<br/>
<br/>

<table>
  <tr>
    <th>Name</th>
    <th>Short Name</th>
    <th>Homepage</th>
    <th>City</th>
    <th>State</th>
    <th>Post Code</th>
    <th>Country</th>
    <th>Latitude</th>
    <th>Longitude</th>
  </tr>

<% @organisations.each do |organisation| %>
  <tr>
    <td><%=h organisation.name %></td>
    <td><%=h organisation.short_name %></td>
    <td><%= link_to organisation.homepage, 'http://'+organisation.homepage %></td>
    <td><%=h organisation.city %></td>
    <td><%=h organisation.state %></td>
    <td><%=h organisation.post_code %></td>
    <td><%=h organisation.country %></td>
    <td><%=h organisation.latitude %></td>
    <td><%=h organisation.longitude %></td>
    <td><%= link_to 'Show', organisation %></td>
    <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
    <td><%= link_to 'Remove', organisation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

